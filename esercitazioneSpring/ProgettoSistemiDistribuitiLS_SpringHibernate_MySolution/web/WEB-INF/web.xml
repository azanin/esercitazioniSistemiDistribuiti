<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  
	<display-name>ProgettoSistemiDistribuitiLS_SpringHibernate</display-name>
	<description>...</description>
	
	
	<!-- context param contextConfigLocation contiene i file path dei descrittori xml
	dell'application context spring -->
	
	<context-param>
	<param-name>contextConfigLocation</param-name>
	<param-value>/WEB-INF/spring/applicationContext.xml</param-value>
	</context-param>
	
	<!-- Bootstrap listener per far partire webApplicationContext di Spring -->
	<listener>
	<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
  
</web-app>